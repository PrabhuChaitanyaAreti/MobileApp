<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_gravity="center"
android:orientation="vertical"
android:background="@drawable/bg_scr"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="30dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:layout_marginLeft="120dp"
    android:layout_marginRight="120dp"
    android:background="@drawable/border_operator">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/goodman"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/operator_spinner"
            android:completionThreshold="1"
            android:hint="Select Operator"
            android:padding="10dp"
            android:inputType="textNoSuggestions"
            android:dropDownHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:background="@drawable/background"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="center"
            android:textAlignment="center"/>

        <AutoCompleteTextView
            android:id="@+id/die_spinner"
            android:padding="10dp"
            android:dropDownHeight="100dp"
            android:completionThreshold="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:hint="Select Die Id"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:singleLine="true"
            android:background="@drawable/background"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="center"
            android:textAlignment="center"
            android:textColorHint="#CFD8DC" />

        <AutoCompleteTextView
            android:id="@+id/part_spinner"
            android:padding="10dp"
            android:dropDownHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:inputType="textNoSuggestions"
            android:imeOptions="flagNoExtractUi|actionDone"
            android:singleLine="true"
            android:hint="Select Part Id"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:textAlignment="center"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColorHint="#CFD8DC"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_bg"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white" />

</LinearLayout>
</LinearLayout>