        <TextView
            android:id="@+id/retakeVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="30"
            android:background="@drawable/red_rounded_corner_shape"
