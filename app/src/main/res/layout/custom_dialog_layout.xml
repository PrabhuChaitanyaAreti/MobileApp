<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">
    <TextView
        android:id="@+id/title"
        android:background="@color/goodman_red"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3" android:textStyle="bold"></TextView>
    <TextView
        android:id="@+id/message"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textAppearance="@style/TextAppearance.AppCompat.Large"></TextView>
    <LinearLayout
        android:id="@+id/llButtons"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>